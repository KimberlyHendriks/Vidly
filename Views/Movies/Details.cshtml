@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    
    <li><b>Genre</b> @Model.Genre.MovieGenre</li>
    <li><b>Release Date</b> @Model.ReleaseDate.ToLongDateString()</li>
    <li><b>Date Added</b> @Model.DateAdded.ToLongDateString()</li>
    <li><b>Numbers in Stock</b> @Model.NumbersInStock</li>

</ul>
